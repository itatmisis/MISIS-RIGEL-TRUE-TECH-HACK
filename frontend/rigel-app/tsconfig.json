{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ],
  // Aliases
  "_moduleAliases": {
    "@": "./src",
    "@components": "./src/components",
    "@hooks": "./src/hooks",
    "@pages": "./src/pages",
    "@utils": "./src/utils",
    "@styles": "./src/styles",
    "@assets": "./src/assets",
    "@types": "./src/types",
    "@api": "./src/api",
    "@config": "./src/config",
    "@store": "./src/store",
    "@services": "./src/services",
    "@constants": "./src/constants",
    "@contexts": "./src/contexts",
    "@components/*": [
      "./src/components/*"
    ],
    "@hooks/*": [
      "./src/hooks/*"
    ],
    "@pages/*": [
      "./src/pages/*"
    ],
    "@utils/*": [
      "./src/utils/*"
    ],
    "@styles/*": [
      "./src/styles/*"
    ],
    "@assets/*": [
      "./src/assets/*"
    ],
    "@types/*": [
      "./src/types/*"
    ],
    "@config/*": [
      "./src/config/*"
    ]
  }
}
